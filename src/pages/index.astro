---
import { Image } from 'astro:assets';
import mhk from "../../public/mhk-potrait.webp";
import BaseLayout from '../layouts/BaseLayout.astro';
import { formatDate } from '../scripts/helper.js';

const pageTitle = "Muhammad Hafid K";
const AllPosts = await Astro.glob('../pages/posts/*.md');
const Posts = AllPosts.sort(function(a, b) { return Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate) }).slice(0, 4)
---

<BaseLayout pageTitle={pageTitle}>
  <div class="max-w-screen-sm mx-auto p-4">
    <div class="flex items-center gap-6 my-16">
      <Image src={mhk} alt="MHK" class="rounded-full h-20 w-20" />
      <div class="">
        <p class="font-bold">Muhammad <span class="text-violet-700">Hafid</span> <span class="hidden sm:inline">Khoirul</span></p>
        <p class="text-sm">Backend Engineer at <a href="https://www.qontak.com" target="_blank" class="text-violet-700 hover:text-violet-800 underline">Qontak</a></p>
      </div>
    </div>
    <div class="">
      <h2 class="font-medium text-lg">A Little About <span class="text-violet-700">Me</span>&nbsp;&nbsp;üëã</h2>
      <div class="mt-2 text-slate-600">
        <p class="">I'm a software engineer based in Bogor, Indonesia. Currently, I'm working as a backend engineer at <a href="https://www.qontak.com" target="_blank" class="text-violet-700 hover:text-violet-800 underline">Qontak</a>. I'm focused on backend technology right now. I'm also interested in IoT and computer vision.</p>
        <p class="mt-2">Whem I'm away from keyboard, I usually play badminton üè∏ or try to check my food bucket list üç≤.</p>
        <p class="mt-2">Get to know me <a href="/about"  class="text-violet-700 hover:text-violet-800 underline">more</a> or read my <a href="/blog"  class="text-violet-700 hover:text-violet-800 underline">blog</a>.</p>
      </div>
    </div>
    <div class="mt-20">
      <h2 class="font-medium text-lg">Latest Blog Posts</h2>
      <div class="mt-4 grid grid-cols-1 gap-6 mb-12">
        {
          Posts.map((post) =>
            <div class="pl-4 border-l-2 border-violet-700">
              <a href={post.url} class="hover:text-violet-800 underline">{post.frontmatter.title}</a>
              <p class="mt-2 text-sm text-slate-600">{formatDate(post.frontmatter.pubDate)}</p>
              <div class="mt-2">
                <div class="flex flex-wrap gap-1 text-xs text-violet-600">
                  { post.frontmatter.tags.map((tag) =>
                      <p class="px-1.5 py-0.5 border border-violet-600">{tag}</p>
                    )
                  }
                </div>
              </div>
            </div>
          )
        }
      </div>
      <button class="transition ease-in-out hover:translate-x-2 duration-300">
        <a href="/blog" class="hover:text-violet-700">More post ‚Üí</a>
      </button>
    </div>
    <div class="mt-20">
      <h2 class="font-medium text-lg">Experiences</h2>
      <div class="mt-4">
        <div class="">
          <div class="flex flex-col md:flex-row justify-between">
            <p>Backend Engineer at <a href="https://www.qontak.com" target="_blank" class="text-violet-700 hover:text-violet-800 underline">Qontak</a></p>
            <p class="text-sm md:text-base mt-1 md:mt-0 text-slate-600">2020 - Present</p>
          </div>
          <div class="flex gap-2 flex-wrap mt-2 text-violet-600 text-sm">
            <p class="px-1.5 py-0.5 border border-violet-600">Ruby on Rails</p>
            <p class="px-1.5 py-0.5 border border-violet-600">Ruby</p>
            <p class="px-1.5 py-0.5 border border-violet-600">JavaScript</p>
            <p class="px-1.5 py-0.5 border border-violet-600">Go</p>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-20">
      <h2 class="font-medium text-lg">Tools I've Been Familiar With</h2>
      <div class="mt-4">
        <div class="flex gap-2 flex-wrap mt-2 text-violet-600 text-sm">
          <p class="px-1.5 py-0.5 border border-violet-600">Ruby on Rails</p>
          <p class="px-1.5 py-0.5 border border-violet-600">Ruby</p>
          <p class="px-1.5 py-0.5 border border-violet-600">JavaScript</p>
          <p class="px-1.5 py-0.5 border border-violet-600">Go</p>
          <p class="px-1.5 py-0.5 border border-violet-600">Python</p>
          <p class="px-1.5 py-0.5 border border-violet-600">Astro</p>
        </div>
      </div>
    </div>
    <div class="mt-20">
      <h2 class="font-medium text-lg">Projects</h2>
      <div class="mt-4">
        <div class="">
          <div class="max-h-96 w-full">
            <img src="/portfolio-blog.webp" alt="Portfolio Blog" class="h-full bg-cover shadow">
          </div>
          <div class="mt-4">
            <p class="text-center font-bold ">Personal Website</p>
            <div class="flex justify-center gap-2 flex-wrap mt-2 text-violet-600 text-sm">
              <p class="px-1.5 py-0.5 border border-violet-600">Astro</p>
              <p class="px-1.5 py-0.5 border border-violet-600">Tailwind CSS</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-20" id="contact">
      <h2 class="font-medium text-lg">Contact</h2>
      <div class="mt-4">
        <p class="text-slate-600">Have something to say? Ask a question or just say hi, anything! Feel free to contact me, my inbox is always open!</p>
        <p class="text-slate-600 mt-2">You can contact me through one of these platforms!</p>
        <div class="flex items-center gap-8 mt-6">
          <a href="mailto:mhafidk@gmail.com" target="_blank"><img src="/email.svg" alt="" class="h-12 w-12"></a>
          <a href="https://www.linkedin.com/in/mhafidk" target="_blank"><img src="/linkedin.svg" alt="" class="h-10 w-10"></a>
          <a href="https://www.github.com/mhafidk" target="_blank"><img src="/github.svg" alt="" class="h-10 w-10"></a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
