---
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../scripts/helper.js';

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <div class="px-4">
    <div class="w-[30rem] mx-auto">
      <h1 class="mt-12 text-center text-2xl font-semibold">{frontmatter.title}</h1>
    </div>
    <p class="mt-3 mb-6 text-center text-slate-600">{formatDate(frontmatter.pubDate)}</p>
    <div class="max-w-screen-sm mx-auto">
      <slot />
    </div>
  </div>
</BaseLayout>